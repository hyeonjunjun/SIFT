{
  "expo": {
    "name": "Sift",
    "slug": "sift",
    "version": "1.1.1",
    "orientation": "portrait",
    "icon": "./assets/sift-logo.png",
    "scheme": "sift",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#FDFCF8"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.hkjstudio.sift",
      "usesAppleSignIn": true,
      "buildNumber": "124",
      "entitlements": {
        "com.apple.developer.applesignin": [
          "Default"
        ],
        "com.apple.security.application-groups": [
          "group.com.hkjstudio.sift"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "sift",
              "com.googleusercontent.apps.240781979317-1lblejma2h683dpjr3cmd9gdcosb98h2"
            ]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Sift needs access to your photos to extract and summarize content from screenshots and images you select for sifting."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/sift-logo.png",
        "backgroundColor": "#FDFCF8"
      },
      "package": "com.hkjstudio.sift",
      "versionCode": 123,
      "allowBackup": false,
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "sift"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "SEND",
          "category": [
            "DEFAULT"
          ],
          "data": [
            {
              "mimeType": "text/plain"
            }
          ]
        }
      ],
      "permissions": [
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-share-intent",
        {
          "iosAppGroupIdentifier": "group.com.hkjstudio.sift",
          "iosActivationRules": {
            "NSExtensionActivationSupportsWebURLWithMaxCount": 1
          },
          "android": {
            "disableCreateTask": false
          },
          "appleTeamId": "8DA3BAGA32"
        }
      ],
      "expo-apple-authentication",
      "./plugins/withShareExtensionExclusions.js",
      "@react-native-google-signin/google-signin"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4f97e75c-3da1-403c-9e5a-92156c51f400"
      }
    },
    "owner": "hkjstudio"
  }
}
